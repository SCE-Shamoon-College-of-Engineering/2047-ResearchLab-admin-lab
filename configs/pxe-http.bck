# UEFI HTTP boot (архитектура 16)
dhcp-match=set:efihttp,option:client-arch,16
# Отдаём сразу HTTP URL на EFI-лоадер
dhcp-boot=tag:efihttp,http://192.168.1.250/EFI/BOOT/bootx64.efi

# Оставим TFTP включённым (на всякий) — но HTTP главный
enable-tftp
tftp-root=/srv/tftp

# Логи dnsmasq (проще дебажить)
log-queries
log-dhcp
log-facility=/var/log/dnsmasq.log

